<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#1ca9c9"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d1e231"
            android:id="@+id/txtCourseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOB1032"
            android:textSize="20sp"/>
        <TextView
            android:textColor="#d1e231"
            android:id="@+id/txtCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lap trinh android co ban"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#d1e231"
            android:id="@+id/txtCourseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00 - 9:00"
            android:textSize="20sp"/>
        <TextView
            android:textColor="#d1e231"
            android:id="@+id/txtCourseRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 001"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btnEdit"
            android:src="@drawable/map"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <ImageButton
            android:id="@+id/btnDelete"
            android:src="@drawable/map"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>

</LinearLayout>